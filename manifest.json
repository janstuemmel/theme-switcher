{
  "manifest_version": 2,
  "version": "1.0",
  "name": "Theme Switcher",
  "description": "Switch between light/dark theme",
  "homepage_url": "https://github.com/janstuemmel/theme-switcher",
  "browser_action": {
    "default_title": "Theme Switcher",
    "default_popup": "src/popup.html",
    "browser_style": true,
    "default_icon": {
      "128": "src/icon.svg"
    }
  },
  "permissions": [
    "management",
    "storage"
  ],
  "icons": {
    "48": "src/icon.svg",
    "96": "src/icon.svg",
    "128": "src/icon.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "theme-switcher@janstuemmel.github.io",
      "strict_min_version": "55.0a1"
    }
  }
}
